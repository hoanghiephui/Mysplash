<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_photo_button_bar"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.wallpaper.unsplash.common.ui.widget.CircularProgressIcon
            android:id="@+id/container_photo_button_bar_downloadButton"
            android:layout_width="@dimen/large_icon_size"
            android:layout_height="@dimen/large_icon_size"
            android:padding="@dimen/little_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/container_photo_button_bar_downloadTxt"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:text="DOWNLOAD"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/container_photo_button_bar_collectButton"
            android:layout_width="@dimen/large_icon_size"
            android:layout_height="@dimen/large_icon_size"
            android:padding="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_collect_large_light"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/container_photo_button_bar_collectTxt"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:text="COLLECT"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.wallpaper.unsplash.common.ui.widget.CircularProgressIcon
            android:id="@+id/container_photo_button_bar_likeButton"
            android:layout_width="@dimen/large_icon_size"
            android:layout_height="@dimen/large_icon_size"
            android:padding="@dimen/little_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/container_photo_button_bar_likeTxt"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:text="LIKE"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>